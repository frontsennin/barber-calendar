rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Regras para avatars de usuários
    match /avatars/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId;
    }
    
    // Regras para imagens de serviços
    match /services/{serviceId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'barber';
    }
    
    // Regras para documentos da barbearia
    match /barbershop/{documentId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && 
        get(/databases/(default)/documents/users/$(request.auth.uid)).data.role == 'barber';
    }
  }
}
